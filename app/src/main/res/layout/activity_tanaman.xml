<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@color/granite"
    tools:context=".Tanaman">
    <TextView
        android:id="@+id/tabeltahapan"
        android:gravity="center"
        android:background="@color/orangmuda"
        android:text="Tabel Tahapan Pemberian Nutrisi Tanaman Hidroponik"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvCatagory">
    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>